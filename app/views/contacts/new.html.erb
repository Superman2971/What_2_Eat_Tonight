<h1>Request Password</h1>

<div class="col-sm-6 col-sm-offset-3">

  <%= simple_form_for @contact, :html => {:class => 'form-horizontal well well-lg' } do |f| %>
  <div class="input-group">
    <%= f.input :email, :required => true %>
  </div>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div class= "hidden">
      <%= f.text_field :message, :value => 'Please use the following link to change your password: http://www.google.com %(#{email})' %>
    </div>
    <div class="form-group">
      </br>
      <%= f.button :submit, 'Send message', :class=> "btn btn-block btn-primary btn-lg" %>
    </div>
  <% end %>
</div>