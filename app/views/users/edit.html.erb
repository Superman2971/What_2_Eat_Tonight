<h1>Edit Password</h1>

<div class="col-sm-6 col-sm-offset-3">

<%= form_for @user, html:{class: "well well-lg"} do |f| %>

  <!-- NAME FIELD -->
  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
      <%= f.text_field :name, class: "form-control input-lg", value: f.name %>
  </div>

  <!-- EMAIL FIELD -->
  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
      <%= f.text_field :email, class: "form-control input-lg", value: f.email %>
  </div>

  <!-- PASSWORD FIELD -->
  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
      <%= f.password_field :password, class: "form-control input-lg", placeholder: "New Password Here..." %>
  </div>

  <!-- PASSWORD CONFIRMATION FIELD -->
  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
      <%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "New Password Confirmation..." %>
  </div>

  <!-- SUBMIT BUTTON -->
  <div class="form-group">
      <%= f.submit "Login", class: "btn btn-block btn-primary btn-lg"%>
  </div>

<% end %>


</div>