<h1>Edit Password</h1>

<div class="col-sm-6 col-sm-offset-3">

<%= form_for @user, html:{class: "well well-lg"} do |f| %>
  
  <h1>PASSWORD CHANGE for: <%=@user.name%></h1>

  <!-- PASSWORD FIELD -->
  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
      <%= f.password_field :password, required:true, class: "form-control input-lg", placeholder: "New Password Here..." %>
  </div>

  <!-- PASSWORD CONFIRMATION FIELD -->
  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
      <%= f.password_field :password_confirmation, required:true, class: "form-control input-lg", placeholder: "New Password Confirmation..." %>
  </div>

  <!-- SUBMIT BUTTON -->
  <div class="form-group">
      <%= f.submit "Login", class: "btn btn-block btn-primary btn-lg"%>
  </div>

<% end %>


</div>