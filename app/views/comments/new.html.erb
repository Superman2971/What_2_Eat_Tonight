<h1>All of the comments</h1>

<!-- Form to create a new comment -->
<%= form_for @comment do |f| %>
  <%= f.text_field :text, placeholder: "Text Here..." %>
  <%= f.submit %>
<% end %>

<!-- Loop through and show all comments -->
<% @comments.each do |c| %>
  <div>
    <div>User: <%= c.user.name %></div>
    <div>Comment: <%= c.text %></div>
    <!-- Edit link (only shown if you are the user that created it) -->
    <div><%= link_to "Edit", edit_comment_path(c) if (current_user == c.user) %></div>
  </div>
</br>
<% end %>


